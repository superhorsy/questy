{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "src",
    "paths": {
      "@api/*": [
        "api/*"
      ],
      "@images/*": [
        "assets/images/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@questCreation/*": [
        "components/questCreation/*"
      ],
      "@stepCreation/*": [
        "components/questCreation/stepCreation/*"
      ],
      "@reducers/*": [
        "store/reducers/*"
      ],
      "@actions/*": [
        "store/actions/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@/*": [
        "*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
